# Test Mode - set to "true" to use test credentials
TEST_MODE="false"

# Database - Supabase PostgreSQL
# For Vercel/serverless: Use Transaction Pooler (port 6543) with pgbouncer params
DATABASE_URL="postgres://postgres.[PROJECT-REF]:[PASSWORD]@aws-0-[REGION].pooler.supabase.com:6543/postgres?pgbouncer=true&connection_limit=10&pool_timeout=30"
# For migrations: Use Direct Connection (port 5432)
DIRECT_URL="postgres://postgres:[PASSWORD]@db.[PROJECT-REF].supabase.co:5432/postgres"

# Supabase
NEXT_PUBLIC_SUPABASE_URL="https://your-project.supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-anon-key-here"

# Stripe (Production)
STRIPE_SECRET_KEY="sk_live_your_secret_key_here"
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_live_your_publishable_key_here"
STRIPE_WEBHOOK_SECRET="whsec_your_webhook_secret_here"

# Stripe (Test) - used when TEST_MODE="true"
TEST_STRIPE_SECRET_KEY="sk_test_your_test_secret_key_here"
TEST_NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_test_your_test_publishable_key_here"
TEST_STRIPE_WEBHOOK_SECRET="whsec_your_test_webhook_secret_here"

# eSIM Go API (either variable name works)
ESIMGO_API_KEY="your_esimgo_api_key_here"
# Or: ESIMGO_API_TOKEN="your_esimgo_api_token_here"

# Resend (Email)
RESEND_API_KEY="re_your_resend_api_key_here"

# MCP Server API Keys (for Claude Code)
FIRECRAWL_API_KEY="fc-your_firecrawl_api_key_here"
PERPLEXITY_API_KEY="pplx-your_perplexity_api_key_here"
DATAFORSEO_USERNAME="your_dataforseo_username"
DATAFORSEO_PASSWORD="your_dataforseo_password"

# AWS S3
AWS_ACCESS_KEY_ID="your_aws_access_key_id"
AWS_SECRET_ACCESS_KEY="your_aws_secret_access_key"
AWS_REGION="ap-southeast-2"
AWS_S3_BUCKET="trvel-s3"

# Admin Dashboard
ADMIN_USERNAME="admin"
ADMIN_PASSWORD="your_secure_password_here"
ADMIN_API_KEY="your_admin_api_key_for_manual_actions"

# Google Ads Conversion API (Server-Side Tracking)
# Get these from Google Ads > Tools > API Center
GOOGLE_ADS_CUSTOMER_ID="123-456-7890"
GOOGLE_ADS_CONVERSION_ACTION_ID="987654321"
GOOGLE_ADS_DEVELOPER_TOKEN="your_developer_token_here"
# For Manager accounts, set this to the manager account ID
# GOOGLE_ADS_LOGIN_CUSTOMER_ID="111-222-3333"

# Google Ads OAuth (for API authentication)
GOOGLE_ADS_CLIENT_ID="your_oauth_client_id.apps.googleusercontent.com"
GOOGLE_ADS_CLIENT_SECRET="your_oauth_client_secret"
GOOGLE_ADS_REFRESH_TOKEN="your_oauth_refresh_token"

# GA4 Measurement Protocol (Server-Side Tracking)
# Measurement ID is already set in layout.tsx, but can be overridden here
# GA4_MEASUREMENT_ID="G-LQP0KHTXLH"
# Get API Secret from GA4 > Admin > Data Streams > Your Stream > Measurement Protocol API secrets
GA4_API_SECRET="your_ga4_api_secret_here"
